@model ProyectoFinal.Models.EditProfileModel

@{
	ViewBag.Title = "Profile";
}

<h2>Editar perfil</h2>


@using (Html.BeginForm("Profile", "Manage", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<h4>Usuario</h4>
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })

		<div class="form-group">
			@Html.LabelFor(m => m.Photo, new { @class = "col-md-2 control-label" })
			<div class="col-md-10">
				<input type="file" accept="image/*" name="Photo" id="Photo" class="form-control" />
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Save" class="btn btn-default" />
			</div>
		</div>
	</div>
}

<div>
	@Html.ActionLink("Manage", "Index")
</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
